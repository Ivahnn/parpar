<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.demo2.CheckoutController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox spacing="10" alignment="CENTER" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">
        <Label text="Your Saved Itineraries" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        <TableView fx:id="itineraryTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="locationColumn" text="Location"/>
                <TableColumn fx:id="hotelColumn" text="Hotel"/>
                <TableColumn fx:id="attractionColumn" text="Top Attraction"/>
                <TableColumn fx:id="activityColumn" text="Activity"/>
                <TableColumn fx:id="dayColumn" text="Day"/>
            </columns>
        </TableView>
        <HBox spacing="10" alignment="CENTER">
            <Button text="Delete Selected" onAction="#handleDeleteButton"/>
            <Button text="Print Selected" onAction="#handlePrintSelectedButton"/>
            <Button text="Print All" onAction="#handlePrintAllButton"/>
            <Button text="Back to Destinations" onAction="#handleBackButton"/>
        </HBox>
    </VBox>
</AnchorPane>